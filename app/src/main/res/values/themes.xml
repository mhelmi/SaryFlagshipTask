<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.SaryFlagship" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryVariant">@color/white</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/dark_gray</item>
    <item name="colorSecondaryVariant">@color/dark_gray</item>
    <item name="colorOnSecondary">@color/gray</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.SaryFlagship.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.SaryFlagship.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

  <style name="Theme.SaryFlagship.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>